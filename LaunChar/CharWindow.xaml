<Window x:Class="LaunChar.CharWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CharWindow" Height="100" Width="60"

        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Grid>
        <TextBlock
            Name="Char"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="60">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="0"
                    Direction="330"
                    Color="Black"
                    Opacity="1.0"
                    BlurRadius="10"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
